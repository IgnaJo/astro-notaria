---
import LocationIcon from "./Icons/LocationIcon.astro"
import PhoneIcon from "./Icons/PhoneIcon.astro"
import logo from "../assets/logo.svg"
---



<nav class="bg-lightGreen border-gray-200 ">
    <div class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl p-4">
        <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
            <img src={logo.src} class="h-10" alt="notaria Logo">
        </a>
        <div class="flex items-center space-x-6 rtl:space-x-reverse">
            <PhoneIcon class="w-5 h-auto stroke-gray-700 -m-4 "/> <a href="tel:5541251234" class="text-sm  text-gray-700  hover:underline">(+56) 2 22 644 800</a>
            <LocationIcon class="w-5 h-auto stroke-gray-700 "/><a href="/#map-contact" class="text-sm  text-gray-700  hover:underline">Alcantara #107, Las Condes</a>
        </div>
    </div>
</nav>
<nav class="bg-lightGreen flex items-center">
    <div class="max-w-screen-xl px-4 py-3 mx-auto ">
        <div class="flex items-center">
            <ul class="flex flex-row font-medium mt-0 space-x-8 rtl:space-x-reverse text-sm">
                <li>
                    <a href="/" class="text-gray-800 text-lg hover:text-primary hover:underline hover:decoration-primary" aria-current="page">Inicio</a>
                </li>
                <li>
                    <a href="/clientes" class="text-gray-800 text-lg  hover:text-primary hover:underline hover:decoration-primary">Acceso Clientes</a>
                </li>
                <li>
